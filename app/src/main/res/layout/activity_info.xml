<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isaac.flickrcopy.InfoActivity">


    <TextView
        android:id="@+id/infoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAlignment="textStart"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/infoAuthor"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="299dp"
        android:layout_height="248dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.507" />

    <TextView
        android:id="@+id/infoAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textAlignment="textStart"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/infoTitle" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="37dp"
        android:text="Title"
        android:textAlignment="textStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/infoAuthorRes"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="22sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/infoTitleRes"
        app:layout_constraintLeft_toRightOf="@+id/infoAuthor"
        android:layout_marginLeft="51dp" />

    <TextView
        android:id="@+id/infoAuthorDate"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/infoDate"
        app:layout_constraintTop_toBottomOf="@+id/infoAuthorRes" />

    <TextView
        android:id="@+id/infoTitleRes"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="22sp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/infoTitle"
        android:layout_marginLeft="74dp" />

</android.support.constraint.ConstraintLayout>
